<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок с ID игры -->
        <TextView
            android:id="@+id/textViewGameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game ID: 12345678"
            android:textStyle="bold"
            android:textSize="14sp" />

        <!-- Игроки -->
        <TextView
            android:id="@+id/textViewPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Player1 vs Player2"
            android:textSize="14sp" />

        <!-- Тип игры -->
        <TextView
            android:id="@+id/textViewGameType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Против игрока"
            android:textSize="12sp"
            android:textColor="#666" />

        <!-- Результат и дата в одной строке -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Победа"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="01.01.2023 12:00"
                android:textSize="12sp"
                android:textColor="#666" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
